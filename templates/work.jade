h3(style='color: #00A5C9') WORK EXPERIENCE

div.row(style='border-radius: 10px; overflow: hidden; background-attachment: fixed; background-image: url("http://hdwallpaperd.com/wp-content/uploads/2014/12/inclined-abstract-lines_836723.jpg");')
   each item, i in contents['work.json'].metadata
     div.row(style='background-color: rgba(' + (i+1)*80 + ', 100, 120, 0.5);')

       h4(style='margin-left: 40px; color: white; padding-top: 10px')= item.position

       div.three.columns
          each companyInfo in item.companyInformation
             p(style='color: white; margin-bottom: 0px')= companyInfo
       div.seven.columns(style='color: white; background-color: rgba(0,0,0,0.2); padding: 5px; border-radius: 5px; margin-left: 0px; margin-bottom: 20px')

          each bulletPointDescription in item.bulletPoints
             li(style='margin-bottom: 0px;')
                div.row(style='margin-left: 10px')= bulletPointDescription
